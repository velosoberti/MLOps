# ML Pipeline Configuration
# Copy this file to .env and customize for your environment
# All variables use the ML_ prefix

# =============================================================================
# MLflow Configuration
# =============================================================================

# MLflow tracking server URI
ML_MLFLOW_TRACKING_URI=http://127.0.0.1:5000/

# MLflow experiment ID for tracking runs
ML_MLFLOW_EXPERIMENT_ID=467326610704772702

# =============================================================================
# Feast Feature Store Configuration
# =============================================================================

# Path to Feast feature repository
ML_FEAST_REPO_PATH=/path/to/feature_store/feature_repo

# Name of the Feast feature view
ML_FEAST_FEATURE_VIEW=predictors_df_feature_view

# Name of the saved Feast dataset
ML_FEAST_DATASET_NAME=my_training_dataset

# =============================================================================
# Data Paths
# =============================================================================

# Base path for data files
ML_DATA_BASE_PATH=/path/to/data

# Path for output artifacts
ML_ARTIFACTS_PATH=/path/to/data/artifacts

# Path to input CSV file (e.g., diabetes.csv)
ML_INPUT_FILE=/path/to/data/diabetes.csv

# Directory for output files
ML_OUTPUT_DIR=/path/to/data/artifacts

# =============================================================================
# Prediction Configuration
# =============================================================================

# Directory for prediction output files
ML_PREDICTIONS_OUTPUT_DIR=/path/to/data/artifacts/predictions

# Path to historical predictions parquet file
ML_HISTORICAL_PREDICTIONS_FILE=/path/to/data/artifacts/predictions/predictions_history.parquet

# Number of patients to process in prediction pipeline
ML_N_PATIENTS=50

# =============================================================================
# Model Configuration
# =============================================================================

# Name of the registered model in MLflow
ML_MODEL_NAME=diabete_model

# =============================================================================
# API Configuration
# =============================================================================

# Host address for Flask API
ML_API_HOST=0.0.0.0

# Port for Flask API
ML_API_PORT=5005

# Enable Flask debug mode (true/false)
ML_API_DEBUG=false

# =============================================================================
# Logging Configuration
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
ML_LOG_LEVEL=INFO

# Path to log file
ML_LOG_FILE=api.log
